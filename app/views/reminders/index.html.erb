<div class="wrapper">
  <div class="container">
    <h5>My borrowings</h5>
    <div class="col-xs-12 col-md-9">
      <div class="reminder-title">
        <h2>Items rented or borrow to other persons</h2>
      </div>
        <div class="row">
          <% @reminders_others.each do |reminder|%>
            <div class="col-xs-12 col-md-4"">
            <% if reminder.status.nil? %>
              <%= render 'shared/card_reminder', reminder: reminder %>
            <% end %>
            </div>
          <% end %>
        </div>
      <hr>
    </div>
    <!-- Demande de réservation -->
    <div class="col-xs-12 col-md-3">
        <div class="collection-title">
          <h5>Pending reservations</h5>
          <% @reminders_others.each do |reminder| %>
            <% if reminder.status == "pending" %>
              <div>
                <div class="notification">
                  <div class="notification-body">
                    <div class="notification-avatar">
                      <%= cl_image_tag reminder.item.user.avatar, class: "avatar"%>
                    </div>
                    <div class="notification-text">
                      <h6><%= reminder.item.name%></h6>
                    </div>
                  </div>
                  <div class="notification-button">
                    <h1 style="color: rgba(202, 202, 202, 0.8); margin-top: 15px">?</h1>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
          <!-- Saisir une réservation -->
          <% @ghost_reminders.each do |reminder| %>
            <%= render 'shared/card_reminder_ghost', reminder: reminder %>
          <% end %>
          <%= link_to "New borrow",  new_item_outside_reminders_path, class: "btn btn-primary" %>

        </div>
    </div>
  </div>
</div>
