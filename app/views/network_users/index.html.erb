<div class="row">

  <div class="col-xs-12 col-md-3">
    <h4>My networks</h4>

    <% @networks.each do |network| %>

      <div class="col-xs-12 network">
        <h4><%= network.name %> - <%= network.network_users.size %></h4>

        <% network.network_users.each do |network_user| %>
          <div class="col-xs-12">
            <%= render 'shared/card_network', network_user: network_user %>
          </div>
        <% end %>

      </div>

    <% end %>

  </div>

  <div class="col-xs-12 col-md-6">
    <h4>Search a friend</h4>
    <div class="row">

      <% @all_users.each do |user| %>
        <div class="col-xs-4">
          <%= render 'shared/card_friend', user: user %>
        </div>
      <% end %>

    </div>
  </div>


  <div class="col-xs-12 col-sm-3">
    <div class="col-xs-12">
      <h4>Friend requests</h4>
    </div>
    <div class="col-xs-12">
      <h4>Requests sended</h4>
    </div>
  </div>

</div>
