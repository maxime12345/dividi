<div class="col-xs-12 col-lg-3">
    <!-- Current friends -->
    <h4>My friends <%= @default_network_users.count %></h4>
    <% @default_network_users.each do |network_user| %>
        <%= render 'shared/card_network', network_user: network_user %>
    <% end %>

    <!-- Request sent -->
    <h4>Requests sent</h4>
     <% if @pending_network_users.size == 0%>
      You don't have any friend request pending for the moment.
    <% end %>
    <% @pending_network_users.each do |network_user| %>
        <%= render 'shared/card_network_request_sended', network_user: network_user %>
    <% end %>
</div>

<div class="col-xs-12 col-lg-6">
  <div class="zone row">
    <div class="col-xs-12">
    <%= render 'shared/search_bar', query: params[:query], placeholder: "Search a friend", path: network_users_path %>
  <hr>
  </div>

    <% if @users.size == 0 %>
      <div class="col-xs-12">
        Sorry, no friend match with your request.
      </div>
    <% else %>
      <% @users.each do |user| %>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <%= render 'shared/card_friend', user: user %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="col-xs-12 col-lg-3">
  <div class=" friends row">
    <!-- Friends request -->
    <h4>Friend requests</h4>
      <% if @friend_requests.size == 0%>
        No friend requests for the moment.
      <% end %>
    <% @friend_requests.each do |network_user| %>
        <%= render 'shared/card_network_friend_request', network_user: network_user %>
    <% end %>
  </div>
</div>

