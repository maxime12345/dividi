<div class="container">

<div class="form">


  <h2>Modifier mon profil</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :username,
                  required: false,
                  label: 'Pseudo' %>
      <%= f.input :avatar,
                  required: false,
                  input_html: { accept: ('image') } %>
      <%= f.input :avatar_cache, as: :hidden %>
      <%= f.input :current_password,
                  hint: "Nécessite votre mot de passe actuel",
                  required: true,
                  input_html: { autocomplete: "current-password" },
                  label: 'Mot de passe actuel' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour mon profil", class: "btn-primary" %>
    </div>
  <% end %>
</div>

<div class="form">


<h2>Changer mon mot de passe</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :current_password,
                  hint: "Nécessite votre mot de passe actuel",
                  required: true,
                  input_html: { autocomplete: "current-password" },
                  label: 'Mot de passe actuel' %>
      <%= f.input :password,
                  hint: "Ne pas remplir si vous ne changez pas le mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  label: 'Nouveau mot de passe' %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  label: 'Confirmez le nouveau mot de passe' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour mon mot de passe", class: "btn-primary" %>
    </div>
  <% end %>
</div>

<hr>
  <p>Non satisfait ? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr ?" }, method: :delete %></p>

  <%= link_to "Retour", :back %>
  <hr>

</div>
