

<div class="formulaire">

  <%= simple_form_for user, url: user_session_path do |f| %>
    <%= f.input :username, placeholder: 'Pseudo', label: 'username', error: 'Username is mandatory, please specify one' %>
    <%= f.input :email, placeholder: 'yourname@mail.com' %>
    <%= f.button :submit, value: 'Sign in' %>
  <div class="btn">
    <%= link_to "Sign up", new_user_registration_path%>
  </div>
  <% end %>
</div>

