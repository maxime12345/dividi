<div class="container">
    <div class="form">
      <h2>Se connecter</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      label: 'Mot de passe' %>
          <%= f.input :remember_me, as: :boolean, label: 'Se souvenir de moi' if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
