<div class="wrapper">
  <div class="container">

    <!-- Liste de mes objets -->
    <div class="col-xs-12 col-md-9">
      <h5>My objects</h5>
        <div>
          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#available" aria-controls="available" role="tab" data-toggle="tab">Available</a></li>
            <li role="presentation"><a href="#not-available" aria-controls="not-available" role="tab" data-toggle="tab">Not available</a></li>
          </ul>

          <!-- Tab panes -->
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="available">
              <% @collections.each do |collection| %>
                  <% collection.items.each do |item| %>
                    <% if item.reminders[0].nil? || item.reminders[0].status == "pending" %>
                      <%= render 'shared/card_list', item: item %>
                    <% end %>
                  <% end %>
              <% end %>
            </div>
            <div role="tabpanel" class="tab-pane" id="not-available">
              <% @collections.each do |collection| %>
                <% collection.items.each do |item| %>
                  <% unless item.reminders[0].nil? %>
                    <%= render 'shared/card_list', item: item %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
    </div>

    <!-- Demande de rÃ©servtion -->
    <div class="col-xs-12 col-md-3">
        <div class="collection-title">
          <h5>Pending reservations</h5>
          <% @my_pending_reminders.each do |reminder| %>
            <div>
              <p><%= cl_image_tag reminder.user.avatar %></p>
              <p><%= reminder.item.name %></p>
              <!-- Accept -->
              <%= link_to accept_reminder_path(reminder) do %>
                <button type="button" class="btn btn-success">Accept</button>
              <% end %>
              <!-- Decline -->
              <%= link_to "Destroy", reminder_path(reminder.id),
                method: :delete,class: "btn" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
