<div class="col-xs-12 col-md-3">
    <div class="collection-title">
      <h2>My collections</h2>
    </div>

  <div class="zone">
    <div class="collection-name">
        <% @collections.each do |collection| %>
            <div class="name-c"> <%= collection.name %> (<%= collection.items.size %>)
              <%= link_to edit_collection_path(collection) do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>


              <% if collection.items.size == 0 %>

              <%= link_to collection_path(collection),
              method: :delete,
              data: {confirm: "Are you sure you want to delete this collection ?" }, class: "little-button"  do %>
            <i class="fas fa-trash"></i>
              <% end %>

              <% end %>
            </div>
          <% end %>
          <div class="add-form">
            <div class="accordionWrapper">
              <div class="accordionItem closing">
                <h2 class="accordionItemHeading"> ADD A COLLECTION </h2>
                <div class="accordionItemContent">
                    <%= render 'form_collection', collection: @collection, button: "Add" %>
                </div>
              </div>
            </div>
          </div>
      </div>
  </div>
</div>

<div class="col-xs-12 col-md-6">

  <div class="filter-zone">
    <h4>Filter zone</h4>
  </div>

  <% @collections.each do |collection| %>

    <h4 class="collection-title"><%= collection.name %>  <%= collection.items.size %></h4>

      <% collection.items.each do |item| %>

        <%= render 'shared/card_list', item: item %>

          <% end %>

  <% end %>

</div>

<div class="col-xs-12 col-md-3">
  <div class="reminder-title">
    <h2>Items rented or borrow <br> to other persons</h2>
  </div>


    <div class="reminder-card">
      <% @reminders_others.each do |reminder|%>
        <%= render 'shared/card_reminder', reminder: reminder %>
      <% end %>
    </div>

  <hr>

  <h2>Reminders for objects of other people not in the network</h2>

  <% @ghost_reminders.each do |reminder| %>
    <%= render 'shared/card_reminder_ghost', reminder: reminder %>
  <% end %>

  <%= link_to "Add an object outside network",  new_item_outside_reminders_path, class: "btn btn-primary" %>


</div>
