<div class="container container-collection">
  <h1>Mes objets</h1>
  <div class="row">
    <div class="col-xs-6 col-md-4 col-lg-3">
      <%= link_to new_item_path()  do %>
        <div class="card add-item"><i class="fas fa-plus-circle"></i></div>
      <% end %>
    </div>
    <% @items.each do |item| %>
      <div class="col-xs-6 col-md-4 col-lg-3">
      <%= render 'shared/card_item', item: item %>
      </div>
    <% end %>
  </div>
</div>

