<div class="col-xs-12 col-md-3">
  <div class="collection-title"> <h2>My collections</h2> </div>
    <div class="zone">

      <div class="collection-name">


          <% @collections.each do |collection| %>



            <div class="name-c"> <%= collection.name %> (<%= collection.items.size %>)
              <%= link_to edit_collection_path(collection) do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>


              <% if collection.items.size == 0 %>

              <%= link_to collection_path(collection),
              method: :delete,
              data: {confirm: "Are you sure you want to delete this collection ?" }, class: "little-button"  do %>
                  <i class="far fa-trash-alt"></i>
              <% end %>

              <% end %>
            </div>
          <% end %>
      </div>





      <div class="add-form">
          <div class="accordionWrapper">

          <div class="accordionItem close">

              <h2 class="accordionItemHeading"> Hi
                <button class="accordion"></button>
              </h2>

              <div class="accordionItemContent">
                  <%= render 'form_collection', collection: @collection, button: "Add" %>
              </div>
          </div>



          </div>
      </div>

    </div>




