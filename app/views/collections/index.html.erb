<div class="col-xs-12 col-md-3">
    <div class="collection-title">
      <h2>Objects my friends are interested in</h2>
    </div>
</div>

<div class="col-xs-12 col-md-6">

  <h5>My objects</h5>


              <%= link_to collection_path(collection),
              method: :delete,
              data: {confirm: "Are you sure you want to delete this collection ?" }, class: "little-button"  do %>
            <i class="fas fa-trash"></i>
              <% end %>


    <div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#available" aria-controls="available" role="tab" data-toggle="tab">Available</a></li>
    <li role="presentation"><a href="#not-available" aria-controls="not-available" role="tab" data-toggle="tab">Not available</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="available">

      <% @collections.each do |collection| %>

          <% collection.items.each do |item| %>

            <% if item.reminders[0].nil? %>
              <%= render 'shared/card_list', item: item %>
            <% end %>


          <% end %>
      <% end %>


    </div>
    <div role="tabpanel" class="tab-pane" id="not-available">

      <% @collections.each do |collection| %>

          <% collection.items.each do |item| %>
          <% unless item.reminders[0].nil? %>

            <%= render 'shared/card_list', item: item %>
          <% end %>

          <% end %>
      <% end %>


    </div>
  </div>

  </div>

</div>

