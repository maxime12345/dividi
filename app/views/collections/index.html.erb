<div class="col-xs-12 col-md-3">

</div>

<div class="col-xs-12 col-md-6">

  <div class="filter-zone">
    <h4>Filter zone</h4>
  </div>

  <% @collections.each do |collection| %>

    <div class="col-xs-12 collection">
      <h4><%= collection.name %> - <%= collection.items.size %></h4>

      <% collection.items.each do |item| %>
        <div class="col-xs-12">
          <%= render 'shared/card_item', item: item %>
        </div>
      <% end %>

    </div>

  <% end %>

</div>

<div class="col-xs-12 col-md-3">
  <h2>Items rented or borrow to other persons</h2>

  <% @reminders_others.each do |reminder|%>

    <div class="col-xs-12">
      <%= render 'shared/card_reminder', reminder: reminder %>
    </div>

  <% end %>

</div>

