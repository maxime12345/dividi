<div class="col-xs-12 col-md-3">
  <div class="zone">

    <h2>My collections</h2>
    <% @collections.each do |collection| %>

      <div>

      <%= collection.name %> (<%= collection.items.size %>)
      <%= link_to edit_collection_path(collection) do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>

      <% if collection.items.size == 0 %>

      <%= link_to collection_path(collection),
      method: :delete,
      data: {confirm: "Are you sure you want to delete this collection ?" }, class: "little-button"  do %>
          <i class="far fa-trash-alt"></i>
      <% end %>

      <% end %>

      </div>

    <% end %>
    <hr>

    <div class="add-form">

      Add an other collection :

      <%= render 'form_collection', collection: @collection, button: "Add" %>

    </div>
  </div>

</div>

<div class="col-xs-12 col-md-6">

  <div class="filter-zone">
    <h4>Filter zone</h4>
  </div>

  <% @collections.each do |collection| %>

        <h4 class="collection-title"><%= collection.name %>  <%= collection.items.size %></h4>

          <% collection.items.each do |item| %>

              <%= render 'shared/card_list', item: item %>

          <% end %>

  <% end %>

</div>

<div class="col-xs-12 col-md-3">
   <div class="reminder-title"> <h2>Items rented or borrow <br> to other persons</h2> </div>

  <div class="reminder-card">
    <% @reminders_others.each do |reminder|%>


      <%= render 'shared/card_reminder', reminder: reminder %>




  <% end %>
  </div>
</div>
