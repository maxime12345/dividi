<div class="container container-user-page">

  <!-- Info sur l'utilisateur -->
  <div class="user">
    <%= render 'shared/avatar', user: @user, size: "big" %>
    <div class="infos">
      <% if @user.username.nil? %>
        <span class="titre"> <%= @user.email %></span>
      <% else %>
        <span class="titre"> <%= @user.username %>  </span><br>
        <%= @user.email %>
      <% end %>
      <br>
      <br>
      <%= @user.friends.count %> amis <br>
      <%= @user.items.count %> objets <br>
      <span class="date"> Sur Dividi depuis le <%= @user.created_at.strftime("%d/%m/%Y") %> </span>
    </div>
  </div>

  <hr>
  <!-- Liste des articles de l'utilisateur -->
  <div class="collections">
    <% @collections.each do |collection| %>
      <% unless collection.items.size == 0  %>
        <div class="row">
          <% collection.items.each do |item| %>
            <div class="col-xs-6 col-md-4 col-lg-3">
              <%= render 'shared/card_item', item: item %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
