    <div class="box1">
      <h1>Item : <%= @item.name %> </h1><br>
      <p>Collection : <%= @item.collection.name %> </p><br>
      <p>Description : <%= @item.description %> </p>
      <button class="btnverbe" type="submit"><%= @item.verbe %></button>
