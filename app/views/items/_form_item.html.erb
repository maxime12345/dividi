<%= simple_form_for(item) do |f|%>
  <%= f.input :name %>
  <%= f.input :price_cents %>
  <%= f.association :collection %>
  <%= f.input :photo, input_html: {accept: ('image') } %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit, class: "btn"%>
<% end %>



